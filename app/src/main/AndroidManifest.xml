<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.j380.alarm">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
            android:name=".BatteryReminderApplication"
            android:allowBackup="true"
            android:icon="@drawable/clock"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".permissions.PermissionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
                android:name=".service.BatteryService"
                android:launchMode="singleTask"
                />

        <receiver android:name=".receiver.BatteryBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>

            <intent-filter >
                <action android:name="@string/checkBatteryIntentAction" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
